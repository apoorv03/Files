<?xml version="1.0"?>
<root>
  <!-- Author: aristidesfl@gmail.com -->
  <item>
    <name>Gmail Navigation</name>
    <identifier vk_config="true">notsave.private_gmail_navigation_in_mail</identifier>
    <autogen>--ShowStatusMessage-- Gmail Navigation</autogen>
    <only>MAIL</only>

    <!-- j/k -->
    <autogen>--KeyToKey-- KeyCode::J, ModifierFlag::NONE, KeyCode::CURSOR_DOWN</autogen>
    <autogen>--KeyToKey-- KeyCode::K, ModifierFlag::NONE, KeyCode::CURSOR_UP</autogen>
    <!-- r -->
    <autogen>--KeyToKey-- KeyCode::R, ModifierFlag::NONE, KeyCode::R, ModifierFlag::COMMAND_L</autogen>
  </item>
  <item>
    <name>Turn Gmail Navigation on when you press space key</name>
    <identifier>private.gmail_navigation_in_mail</identifier>
    <autogen>
      --KeyOverlaidModifier--
      KeyCode::SPACE,
      KeyCode::VK_CONFIG_SYNC_KEYDOWNUP_notsave_private_gmail_navigation_in_mail,
      KeyCode::SPACE
    </autogen>
  </item>
</root>
